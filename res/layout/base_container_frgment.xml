<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Base_container_inner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.example.customview.CustomHorizonScrollViewPicker
                android:id="@+id/horizontal_scroll_view_picker"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@android:color/darker_gray"
                android:fillViewport="true"
                android:overScrollMode="never"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@+id/arrange_by_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="131.8dp"
                        android:layout_marginRight="41.7dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/arrange_by_1_image"
                            android:layout_width="96.5dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@android:color/holo_blue_bright"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="88.5dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Popular"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/arrange_by_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="41.7dp"
                        android:layout_marginRight="41.8dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/arrange_by_2_image"
                            android:layout_width="96.5dp"
                            android:layout_height="2dp"
                            android:background="@android:color/holo_blue_bright"
                            android:gravity="center_horizontal"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="88.5dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Most View"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/arrange_by_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="41.8dp"
                        android:layout_marginRight="131.8dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/arrange_by_3_image"
                            android:layout_width="96.5dp"
                            android:layout_height="2dp"
                            android:background="@android:color/holo_blue_bright"
                            android:gravity="center_horizontal"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="88.5dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="New"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </FrameLayout>
                </LinearLayout>
            </com.example.customview.CustomHorizonScrollViewPicker>

            <android.support.v4.view.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>